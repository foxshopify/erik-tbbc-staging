.header-item--left {
  position: relative;
}
.site-header__search-container.search-desktop {
  border: 1px solid #a29146;
  top: 10px;
  left: 0px;
  width: 300px;
  height: 50px;
}
.site-header__search-container.search-desktop .site-header__search .page-width {
  padding: 0 4px;
}
.site-header__search-container.search-desktop .site-header__search-form {
  padding: 10px 0;
}
.site-header__search-container.search-desktop .site-header__search-btn {
  max-width: 50px;
}
.site-header__search-container.search-mobile {
  top: 100%;
  width: 100%;
  height: 70px;
  background-color: #feeff3;
}
.site-header__search-container.search-mobile .site-header__search {
  background-color: transparent;
}
.site-header__search-container.search-mobile .page-width {
  background-color: #ffffff;
  margin: 10px 20px;
}
.site-header__search-container.search-mobile .site-header__search-btn {
  max-width: 50px;
}
.site-header-sticky .search-mobile {
  display:block;
}
.site-header--stuck .search-mobile {
  display:none;
}

// Expose text below icons
.header-layout--center {
    align-items: flex-start;
}
.header-item .site-nav__link {
    position: relative;
}
.header-item .site-nav .icon__fallback-text {
    top: 50px;
    left: 50%;
    width: auto;
    height: auto;
    position: absolute;
    clip: auto;
    overflow: visible;
    transform: translatex(-50%);
    font-size: 10px;
}
.header-item--icons .cart-link .icon__fallback-text {
    top: 42.5px;
}
.cart-link__bubble {
    right: -7px;
    top: 3%;
}




#HeaderSearchForm {
    padding: 0;
    margin: 7.5px 7.5px 7.5px 0;
    border: 1px solid #ddd;
    width: 200px !important;
    max-width: 250px;
    border-radius: 2px;

}
.site-header__search-btn {
    display: inline-block !important;
    padding-right: 1px;
}
.site-header__search-btn img {
    display: block !important;
    left: 5px;
    position: relative;
}

.toolbar__menu {
    margin-left: 0;
}


.cart-link .icon__fallback-text {
    display:none;
}



@media only screen and (max-width: 959px) {
  header.site-header {
    padding: 0;
  }
  .site-header .page-width {
    padding: 0 14px;
  }
  .site-header__logo {
    margin: 8px 0;
  }
  .header-layout--center {
    align-items: center;
  }
  .header-item .site-nav .icon__fallback-text {
  	display: none;
  }
}


@media only screen and (min-width: 960px) {
  .site-header {
    padding: 10px 0;
  }
  .site-header--stuck .header-layout {
    display:none;
  }
  .header-layout {
    padding: 20px 0 30px 0;
  }
}

// New styles for announcement bar
.announcement-bar{
  padding: 0px; 
  .announcement-slider__slide{
    padding: 10px 5px; 
  }
}

.toolbar{
  .toolbar__content{
    display: flex; 
    flex-wrap: wrap; 
    justify-content: space-between;
    padding: 3px 0px;
    .toolbar__item{
      display: inline-block;
      &.toolbar__item--text{
        padding-left: 5px;
        .toolbar_text{
          font-size: 16px;
        }
      } 
      &.toolbar__item--menu{
        padding-right: 5px;
        text-align: right;
        .toolbar-nav--item{
          display: inline-flex; 
          align-items: center;
          margin-right: 5px; 
          .toolbar-link__icon{
            margin-right: 5px;
            display: inline-block;
          }
          .toolbar-link__label{
            font-size: 16px; 
          }
        }
      }
    }
  }
}
.only-sticky-navigation{
  display: none;
}
.site-header--stuck.site-header--opening{
  .only-sticky-navigation{
    display: block;
  }
}
.header-layout.header-layout--center{
  display: flex; 
  flex-wrap: wrap; 
  align-items: center;
  @media only screen and (max-width: 960px){
    .header-item--logo{
      flex: 1 1 calc(100% - 300px);
      max-width: calc(100% - 300px);
      margin: 0 15px;
    }
  } 
}

.site-header--stuck .header-layout--center{
  display: none;
  @media only screen and (max-width: 960px){
    display: flex; 
  }
}
.sticky-special-nav{
  display: none; 
}
.site-header--stuck{
  .sticky-navigation{
    display: flex; 
    flex-wrap: wrap; 
    align-items: center;
    @media only screen and (max-width: 960px){
      display: none; 
    }
    .site-navigation{
      .site-nav__link{
        padding: 10px 15px; 
      }
    } 
    .sticky-special-nav{
      display: block;
      .special-navs{
        .spec-nav{
          padding: 5px 10px;
          .spec-icon-wrapper{
            margin-bottom: 0px;
          }
          .spec-icon-label{
            display: none; 
          }
        }
      }
    }
  }
}
.special-navs{
  display: flex; 
  flex-wrap: wrap; 
  align-items:center; 
  .spec-nav{
    display: inline-block;
    text-align: center;
    margin-right: 10px;
    padding: 5px 15px;
    &:last-of-type{
      margin-right: 0px; 
    }
    .spec-icon-wrapper{
      margin-bottom: 3px;
    }
    .spec-icon-label{
      display: block;
      font-size: 16px;
    }
    &.cart{
      position: relative;
      .cart-count{
        border-radius: 50%;
        position: absolute;
        width: 20px;
        height: 20px;
        display: inline-block;
        background-color: #a29146;
        color: #fff;
        font-size: 12px;
        line-height: 20px;
        right: 5px;
        top: 5px;
      }
    }
  }
}

// Styles for mobile menu
#NavDrawer{
  .drawer__contents{
    display: block;
  }
  .drawer__fixed-header{
    height: 45px;
    display:flex; 
    flex-wrap:wrap; 
    align-items: center; 
    .drawer__header{
      border: none; 
      display: block; 
      height: auto;
      padding: 10px 0px;
      .drawer__title{
        display: block;
        margin: 0; 
        text-align: center;
      }   
    }
  }
  .drawer-menus__wrapper{
    height: calc(100% - 60px);
    overflow-y: auto;
    display: flex; 
    flex-direction: column;
  }
  .drawer__scrollable{
    display: block; 
    padding: 15px;  
  }
  .mobile-menu--primary{
    flex: 1 1 auto; 
  }
  .mobile-nav{
    margin: 0 -15px; 
    .mobile-nav__item{
      &:after{
        border: none; 
      }
      .mobile-nav__link{
        display: flex; 
        flex-wrap: wrap; 
        align-items: center; 
        padding: 10px 15px;
        .mobile-link--icon{
          margin-right: 5px; 
        }
      }
    }
  }
  .mobile-nav__sublist{
    padding-left: 5px;
    .mobile-nav__link{
      font-size: 16px;
    }
  }
  .mobile-nav__grandchildlist{
    padding-left: 10px;
  }
  .mobile-menu--secondary{
    padding: 15px 0px;
    flex: 1 1 auto;
    .mobile-nav--secondary{
      margin: 0px; 
      .mobile-nav__item{
        background: none;
      }
    }
  }
}